<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".UpdateActivity">

    <EditText
        android:id="@+id/updateTasktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new task title"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ></EditText>
    <EditText
        android:id="@+id/updateTaskDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new task Description"
        android:layout_below="@+id/updateTasktitle"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        ></EditText>
    <EditText
        android:id="@+id/updated_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateTaskDesc"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Update due time">
    </EditText>

    <Button
        android:id="@+id/set_updatedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateTaskDesc"
        android:layout_toRightOf="@+id/updated_time"
        android:layout_alignBottom="@+id/updated_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="SET TIME"
        ></Button>

    <Button
        android:id="@+id/updateTaskbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="20dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Update Task"
        android:textColor="@android:color/white"></Button>


</RelativeLayout>